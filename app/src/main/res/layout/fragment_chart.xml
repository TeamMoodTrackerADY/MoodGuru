<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFEECC"
    tools:context=".fragments.ChartFragment">

    <TextView
        android:id="@+id/tvDateHeader"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:text="Mood Flow"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/idGraphView"
        android:layout_width="wrap_content"
        android:layout_height="480dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/moveBtn"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/moveBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/logo_yellow"
            android:text="Go To Recent"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </LinearLayout>
</LinearLayout>


